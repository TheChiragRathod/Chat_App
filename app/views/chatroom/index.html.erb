<div class="text-center mt-2">
    <%= image_tag("message.png", class: "img-fluid") %>
    <p>Say Something</p>
</div>

<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="card mb-5">
        <div class="card-header">Chat</div>
        <div class="card-body height3">
          <div id="messages">
            <div class="chat-body" id="message-container">
              <%= render @messages%>
            </div>
          </div>
          <%= form_for(@message, url: message_path, remote: true) do |f| %>
            <%= f.text_field :body, class:"form-control mt-3"%>
            <%= f.submit "Send", class:"btn btn-primary mt-2", id:"send_button" %>
          <% end %> 
        </div>
      </div>
    </div>
  </div>
</div>
